{{#each events as |event|}}
<div class="border-2 border-custom-green p-4 rounded-md transition-all cursor-pointer hover:shadow-md">
  <header class="text-xl font-bold text-custom-charcoal">{{event.name}}</header>
  <p class="text-base">{{event.date}}</p>
  <p class="text-base flex items-center text-custom-green"><span
            class="material-symbols-outlined text-custom-brown"
          >
            headphones
          </span>{{event.dj_id}}</p>

  <p class="mt-4 border-t-2 border-custom-mandalay pt-2 text-base">{{event.description}}</p>
</div>
{{/each}}