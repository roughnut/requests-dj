<h2 class="text-4xl font-bold text-custom-charcoal">Song Request</h2>
<form class="song-request-form w-1/2">
    <div>
        <label for="song-title" class="block font-bold text-custom-charcoal">Track title:</label>
        <input type="text" name="song-title" id="song-title" class="border-2 border-custom-brown bg-zinc-50 block w-full rounded-sm px-2 py-1 focus:outline-none focus:ring focus:ring-orange-200"/>
    </div>
    <div>
        <label for="artist-name" class="block font-bold text-custom-charcoal">Track artist:</label>
        <input type="text" name="artist-name" id="artist-name" class="border-2 border-custom-brown bg-zinc-50 block w-full rounded-sm px-2 py-1 focus:outline-none focus:ring focus:ring-orange-200"/>
        <input type="hidden" id="event-id" value="{{event.id}}">
    </div>
    <button type="submit" class="bg-custom-charcoal text-white px-6 py-2 rounded-full transition-all hover:bg-custom-green mt-4">Submit</button>
</form>
<script src="/js/request.js"></script>