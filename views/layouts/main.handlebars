<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{! Tailwind }}
    <script src="https://cdn.tailwindcss.com"></script>
    {{! Custom CSS }}
    <link rel="stylesheet" href="./css/jass.css" />
    <link rel="stylesheet" href="./css/style.css" />
    {{! Google Icons }}
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <title>Request DJ</title>
  </head>
  <body>
    <header
      class="container mx-auto bg-custom-charcoal flex items-center justify-between p-4 rounded-full mt-3"
    >
      <nav class="gap-4 flex text-white">
        <a href="/" class="flex items-center gap-1 transition-all"><span
            class="material-symbols-outlined text-custom-brown"
          >
            playlist_add
          </span>How it works</a>
        <a href="/" class="flex items-center gap-1 transition-all "><span
            class="material-symbols-outlined text-custom-brown"
          >
            headphones
          </span>DJs</a>

        {{#if logged_in}}
          <button id="logout">Logout</button>
        {{else}}
          <a href="/login" class="flex items-center gap-1 transition-all "><span
              class="material-symbols-outlined text-custom-brown"
            >
              person
            </span>Login</a>
        {{/if}}
      </nav>
      <h1 class="logo">Request DJ
        <img src="./images/logo.svg" alt="Request Dj Logo" />
      </h1>
    </header>
    <main class="container mx-auto">
      <section class="mt-5">
        <h2 class="text-4xl font-bold text-custom-charcoal">Events</h2>
        <article class="mt-4 grid grid-cols-3 gap-4">
          {{{body}}}
        </article>
        <button class="bg-custom-charcoal text-white rounded-md">Add new event</button>
      </section>
    </main>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>